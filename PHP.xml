  </template>
  <template name="flowanno" value="use TYPO3\Flow\Annotations as Flow;" description="Flow Annotation use statement" toReformat="false" toShortenFQNames="true" />
  <template name="anno" value="use Neos\Flow\Annotations as Flow;" description="Annotations use statement" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="ORM" value="use Doctrine\ORM\Mapping as ORM;" description="Doctrine Annotations" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="COL" value="@ORM\Column(type=&quot;$&quot;)" description="Doctrine Column Annotation" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="OTM" value="@ORM\OneToMany(targetEntity=&quot;&quot;)" description="OneToMany Doctrine Annotation" toReformat="false" toShortenFQNames="true">
