    <context>
      <option name="PHP Expression" value="true" />
      <option name="PHP Statement" value="true" />
      <option name="PHP String Literal" value="true" />
    </context>
  </template>
  <template name="exm" value="sprintf('$END$'), $TIMESTAMP$" description="Exception Message" toReformat="false" toShortenFQNames="true">
    <variable name="TIMESTAMP" expression="timestamp()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
